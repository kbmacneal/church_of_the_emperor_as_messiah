@page
@model SermonYakiyakModel
@{
    ViewData["Title"] = "A Sermon on Yakiyah";
}

@section styles{
    <link rel="Stylesheet" href="@Href("~/lib/creative/css/creative.css")" />
    <link rel="Stylesheet" href="@Href("~/lib/bootstrap/dist/css/bootstrap.css")" />
    <link rel="Stylesheet" href="@Href("~/css/site.css")" />
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <div class="container">
                <div class="row">
                    <div class="col-6">
                        <img class="img-thumbnail img-fluid" src="~/Assets/yakiyah.jpg" />
                        <div class="lead">Yakiya, a planet in the Tsatsos system, currently controlled by A.C.R.E.</div>
                    </div>
                </div>
            </div>
            <h2>
                @Model.sermonheader
            </h2> 
            <div  style="font-size: 14pt;">@Html.Raw(Model.sermontext)</div>
        </div>
        <div class="col-6">
            <h2>
                @Model.sermonheaderright
            </h2>
            <div style="font-size: 14pt; padding-left: 15px; border-left: 2px solid black;">@Html.Raw(Model.sermontextright)</div>
        </div>
    </div>
</div>
