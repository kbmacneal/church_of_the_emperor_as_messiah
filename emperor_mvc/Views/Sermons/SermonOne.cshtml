@page
@model SermonOne
@{
    ViewData["Title"] = "A Sermon on Yakiyah";
}

@section styles{
    <link rel="Stylesheet" href="@Href("~/lib/creative/css/creative.css")" />
    <link rel="Stylesheet" href="@Href("~/lib/bootstrap/dist/css/bootstrap.css")" />
    <link rel="Stylesheet" href="@Href("~/css/site.css")" />
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="col col-centered h1">
            @Model.sermonheader
        </div>
    </div>
    <div class="row-fluid">
        <div class="col col-centered" style="font-size: 14pt;">
            @Html.Raw(Model.sermontext)
        </div>
    </div>
</div>
