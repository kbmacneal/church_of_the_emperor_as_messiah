                                <asp:Image ImageUrl="~/Twitter_Header.png" runat="server" Width="300px" />
                            </a>
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation_bar">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
