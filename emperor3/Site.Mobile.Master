                            <ul class="nav navbar-nav">
                                <li class="active">
                                    <a runat="server" href="~/" style="font-size:x-large;">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a runat="server" href="~/Decrees" style="font-size:x-large;">Decrees</a>
                                </li>
                                <li class="nav-item">
                                    <a runat="server" href="~/About" style="font-size:x-large;">About</a>
                                </li>
                                <li class="nav-item">
                                    <a runat="server" href="~/Join" style="font-size:x-large;">Join the Church</a>
