<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <title>@ViewData["Title"] - Church of the Emperor-as-Messiah</title>

    @RenderSection("Styles", false)

    <meta name="viewport" content="width=device-width" />

</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="margin-bottom: 50px;">
        <div class="container">
            <div class="row">
                <div class="col-6 navbar-header">

                    <div class="img-fluid navbar-brand">
                        <img src="~/Assets/Twitter_Header.png" style="width:100%;" />
                    </div>

                </div>
                <div class="col-6 d-block d-sm-block d-md-block d-lg-none">
                    <div style="float:right;">
                        <button type="button" class="btn btn-default" data-toggle="collapse" data-target=".navbar-collapse">
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                    </div>
            </div>
            <div class="row align-content-end align-self-end">
                <div class="col-sm-6 col-md-6 col-lg-12 col-xl-12"></div>
                <div class="float-right">
<div class="col-sm-6 col-md-6 col-lg-12 col-xl-12 navbar-collapse collapse align-self-end align-content-end">

                        <ul class="nav navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="~/" style="font-size: x-large;">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Decrees" style="font-size: x-large;">Decrees</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/About" style="font-size: x-large;">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Join" style="font-size: x-large;">Join the Church</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/10Blessings" style="font-size: x-large;">The Ten Virtues</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Reading" style="font-size: x-large;">Readings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Social" style="font-size: x-large;">Important Links</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/FAQ" style="font-size: x-large;">HC FAQ</a>
                            </li>
                        </ul>
                    </div>
                </div>              

                    
                </div>

            </div>



        </div>
    </nav>

    <div class="center">
        <div class="container body-content">
            <div class="row">
                <div class="col col-centered">
                    @RenderBody()
                </div>
            </div>
            <div style="height:35px;"></div>
            <div class="row" style="font-size:larger;">
                <div class="col">
                    <footer>
                        <p>
                            <a href="/Support">Support the Developers</a>
                        </p>
                        <a href="https://github.com/kbmacneal/church_of_the_emperor_as_messiah" target="_blank">This Site and all its content is offered under the MIT license, and is Open Source.</a>
                    </footer>
                </div>
            </div>
        </div>
    </div>



    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js" asp-fallback-src="~/lib/jquery/dist/jquery.min.js" asp-fallback-test="window.jQuery" crossorigin="anonymous" integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js" asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal" crossorigin="anonymous" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)

</body>

</html>