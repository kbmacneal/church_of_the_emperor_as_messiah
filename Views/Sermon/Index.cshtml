@{
    ViewData["Title"] = "Reading";
}
<div class="container-fluid">
    <div class="d-flex flex-column">
        <h3 style="font-weight: bold">The Sermons of The High Church</h3>
        @await Html.PartialAsync("SermonMenu")

<table class="table table-hover">
    <thead>
        <tr>
