@model SermonYakiyahModel 
@{ ViewData["Title"] = "A Sermon on Yakiyah"; }

<div class="container-fluid">
    <div class="flex-column p-3">
        <div class="d-block justify-content-start">
            <img class="img-thumbnail img-fluid mx-auto d-block" src="~/Assets/yakiyah.jpg" />
            <div class="lead text-center">Yakiya, a planet in the Tsatsos system, currently controlled by A.C.R.E.</div>
            <h2>@Model.sermonheader</h2>
            <div style="font-size: 14pt;">@Html.Raw(Model.sermontext)</div>
        </div>
    </div>
    <div class="flex-column p-3">
        <div class="d-block justify-content-end">
            <h2>
                @Model.sermonheaderright
            </h2>
            @Html.Raw(Model.sermontextright)
        </div>
    </div>
</div>