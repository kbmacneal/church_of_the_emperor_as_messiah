@model YouTubeModel
@{ ViewData["Title"] = "View Video"; }

<div class="container-fluid">
    <div class="d-block">
        <div class="d-flex flex-row">
            <a class="d-block mx-auto" href="@Html.Raw(Model.link)" target="_blank">Link to Youtube Page</a>
        </div>
        <div class="d-flex flex-row" style="flex:2; max-height: 100vh; min-height: 100vh;">
            <div class="d-block mx-auto">
               @Html.Raw(Model.embed)
            </div>
        </div>
    </div>
</div>
</div>