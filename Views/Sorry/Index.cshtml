@model SorryModel
@{ ViewData["Title"] = "We Are Sorry"; }


<div class="container-fluid">
            <div class="d-block mx-auto" style="height:50vh;">
                <div id="carouselExampleIndicators" class="carousel slide h-100 w-100 border rounded" data-interval="false">
                    <div class="carousel-inner">
@{
          var i = 1;
          foreach (var x in Model.FileList)
      {
          if(i == 1)
          {
              <div class="carousel-item active">
            <img class="d-block mx-auto img-scaled" src=@x.Replace("wwwroot/","") >
        </div>
          }
          else
          {
              <div class="carousel-item">
            <img class="d-block mx-auto img-scaled" src=@x >
        </div>
          }
        i++;
      }

      }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        </div>